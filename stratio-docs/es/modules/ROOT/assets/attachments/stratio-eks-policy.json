{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Action": [
              "eks:UpdateClusterVersion",
              "secretsmanager:CreateSecret",
              "secretsmanager:DeleteSecret",
              "ec2:CreateVpc",
              "eks:ListAddons",
              "eks:UpdateClusterConfig",
              "ec2:DescribeVpcAttribute",
              "ec2:ReplaceRoute",
              "ec2:CreateInternetGateway",
              "ec2:CreateRoute",
              "ec2:ModifyVpcAttribute",
              "kms:CreateGrant",
              "ecr:BatchCheckLayerAvailability",
              "ecr:GetDownloadUrlForLayer",
              "ec2:CreateRouteTable",
              "eks:DeleteCluster",
              "eks:TagResource",
              "eks:CreateAddon",
              "ecr:BatchGetImage",
              "eks:DescribeCluster",
              "secretsmanager:TagResource"
          ],
          "Resource": [
              "arn:aws:secretsmanager:*:${AWS_ACCOUNT_ID}:secret:aws.cluster.x-k8s.io/*",
              "arn:aws:kms:*:${AWS_ACCOUNT_ID}:key/*",
              "arn:aws:ec2:*:${AWS_ACCOUNT_ID}:internet-gateway/*",
              "arn:aws:ec2:*:${AWS_ACCOUNT_ID}:route-table/*",
              "arn:aws:ec2:*:${AWS_ACCOUNT_ID}:vpc/*",
              "arn:aws:eks:*:${AWS_ACCOUNT_ID}:addon/*",
              "arn:aws:eks:*:${AWS_ACCOUNT_ID}:cluster/*",
              "arn:aws:ecr:*:*:repository/*"
          ]
      },
      {
          "Effect": "Allow",
          "Action": [
              "ec2:AuthorizeSecurityGroupIngress",
              "ec2:RevokeSecurityGroupIngress"
          ],
          "Resource": [
              "arn:aws:ec2:*:${AWS_ACCOUNT_ID}:security-group/*"
          ]
      },
      {
          "Effect": "Allow",
          "Action": [
              "ec2:AssociateVpcCidrBlock",
              "ec2:DisassociateVpcCidrBlock"
          ],
          "Resource": [
              "arn:aws:ec2::${AWS_ACCOUNT_ID}:ipam-pool/*",
              "arn:aws:ec2:*:${AWS_ACCOUNT_ID}:vpc/*",
              "arn:aws:ec2:*:${AWS_ACCOUNT_ID}:ipv6pool-ec2/*"
          ]
      },
      {
          "Effect": "Allow",
          "Action": [
              "ssm:GetParameter"
          ],
          "Resource": [
              "arn:*:ssm:*:*:parameter/aws/service/eks/optimized-ami/*"
          ]
      },
      {
          "Effect": "Allow",
          "Action": [
              "iam:GetRole",
              "iam:PassRole",
              "iam:ListRoleTags",
              "iam:ListAttachedRolePolicies",
              "iam:TagRole",
              "iam:CreateRole",
              "iam:DeleteRole",
              "iam:AttachRolePolicy",
              "iam:PutRolePolicy",
              "iam:UpdateAssumeRolePolicy",
              "iam:CreateInstanceProfile",
              "iam:ListInstanceProfilesForRole",
              "iam:DetachRolePolicy",
              "iam:AddRoleToInstanceProfile",
              "iam:CreateOpenIDConnectProvider",
              "iam:DeleteOpenIDConnectProvider",
              "iam:GetOpenIDConnectProvider",
              "iam:CreateServiceLinkedRole",
              "iam:TagOpenIDConnectProvider"
          ],
          "Resource": [
              "arn:aws:iam::${AWS_ACCOUNT_ID}:role/*",
              "arn:aws:iam::${AWS_ACCOUNT_ID}:instance-profile/*",
              "arn:aws:iam::${AWS_ACCOUNT_ID}:oidc-provider/*"
          ]
      },
      {
          "Effect": "Allow",
          "Action": [
              "elasticloadbalancing:CreateLoadBalancer",
              "elasticloadbalancing:AddTags",
              "elasticloadbalancing:RegisterInstancesWithLoadBalancer",
              "elasticloadbalancing:ModifyLoadBalancerAttributes",
              "elasticloadbalancing:DeleteLoadBalancer",
              "elasticloadbalancing:RemoveTags",
              "elasticloadbalancing:ConfigureHealthCheck"
          ],
          "Resource": [
              "arn:aws:elasticloadbalancing:*:${AWS_ACCOUNT_ID}:loadbalancer/*"
          ]
      },
      {
          "Effect": "Allow",
          "Action": [
              "ec2:DeleteSubnet",
              "ec2:DescribeAddresses",
              "ec2:DescribeInstances",
              "ec2:DeleteTags",
              "ec2:CreateNatGateway",
              "ec2:DescribeRegions",
              "eks:UpdateAddon",
              "ec2:AttachInternetGateway",
              "ec2:DeleteRouteTable",
              "ec2:ModifySubnetAttribute",
              "ec2:AssociateRouteTable",
              "eks:DescribeAddon",
              "ec2:DescribeInternetGateways",
              "elasticloadbalancing:DescribeLoadBalancers",
              "ec2:DescribeNetworkInterfaces",
              "ec2:DescribeAvailabilityZones",
              "ec2:DescribeNetworkInterfaceAttribute",
              "ec2:CreateSecurityGroup",
              "ec2:DeleteInternetGateway",
              "eks:DescribeAddonVersions",
              "ec2:DescribeRouteTables",
              "eks:CreateCluster",
              "ec2:ReleaseAddress",
              "ec2:TerminateInstances",
              "iam:GetPolicy",
              "elasticloadbalancing:DescribeTags",
              "ec2:CreateTags",
              "route53:ListHostedZones",
              "ec2:ModifyNetworkInterfaceAttribute",
              "ecr:GetAuthorizationToken",
              "ec2:RunInstances",
              "ec2:DetachInternetGateway",
              "ec2:DescribeNatGateways",
              "ec2:DisassociateRouteTable",
              "ec2:AllocateAddress",
              "ec2:DescribeSecurityGroups",
              "elasticloadbalancing:DescribeLoadBalancerAttributes",
              "ec2:DescribeImages",
              "iam:ListOpenIDConnectProviders",
              "ec2:DescribeVpcs",
              "ec2:DeleteSecurityGroup",
              "ec2:DescribeInstanceTypes",
              "ec2:DeleteNatGateway",
              "ec2:DeleteVpc",
              "ec2:CreateSubnet",
              "ec2:DescribeSubnets"
          ],
          "Resource": "*"
      },
      {
          "Effect": "Allow",
          "Action": "elasticloadbalancing:RegisterInstancesWithLoadBalancer",
          "Resource": "arn:aws:elasticloadbalancing:*:${AWS_ACCOUNT_ID}:loadbalancer/*"
      }
  ]
}